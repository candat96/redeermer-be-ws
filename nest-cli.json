{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "./modules/notification/firebase/credentials",
        "outDir": "./dist",
        "watchAssets": true
      },
      {
        "include": "./modules/notification/email/templates",
        "outDir": "./dist",
        "watchAssets": true
      },
      {
        "include": "./modules/contract/idl",
        "outDir": "./dist",
        "watchAssets": true
      },
      {
        "include": "./common/data",
        "outDir": "./dist",
        "watchAssets": true
      },
      {
        "include": "**/*.json",
        "outDir": "dist"
      }
    ],
    "watchAssets": true,
    "deleteOutDir": true
  }
}
